<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoreInvestmentApp.Pages.SearchPage">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10">
            <Entry x:Name="EntrySearch" FontSize="Medium" Placeholder="Enter Stock Identifier" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" Completed="Entry_Completed" />
            <Button Text="Search" FontSize="Medium" FontAttributes="Bold" Clicked="Entry_Completed" />

            <ListView HasUnevenRows="False">
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>