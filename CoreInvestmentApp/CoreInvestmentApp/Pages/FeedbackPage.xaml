<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoreInvestmentApp.Pages.FeedbackPage">
    <ContentPage.Content>
        <!--<ScrollView Orientation="Vertical">-->
            <StackLayout Orientation="Vertical" Padding="10,10,10,10">
                <Label Text="Email To" FontAttributes="Bold" HorizontalOptions="StartAndExpand" FontSize="Medium"></Label>
                <Label x:Name="LabelEmailAddress" HorizontalOptions="StartAndExpand"></Label>

                <Label Text="Subject" FontAttributes="Bold" HorizontalOptions="StartAndExpand" FontSize="Medium"></Label>
                <Entry x:Name="EntrySubject" HorizontalOptions="FillAndExpand"></Entry>

                <Label Text="Message" FontAttributes="Bold" HorizontalOptions="StartAndExpand" FontSize="Medium"></Label>
            <Editor x:Name="EditorMessage" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Editor>

                <Button x:Name="ButtonSend" Text="Send" FontSize="Medium" FontAttributes="Bold" Clicked="Button_Clicked" />
            </StackLayout>
        <!--</ScrollView>-->
    </ContentPage.Content>
</ContentPage>